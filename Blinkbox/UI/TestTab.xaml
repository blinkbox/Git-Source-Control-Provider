<UserControl x:Class="GitScc.Blinkbox.UI.TestTab"
             x:Name="TestTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:this="GitScc.Blinkbox.UI.TestTab" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    
    <Control.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0,0,0" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,1,0,1" />
        </Style>
    </Control.Resources>

    <Grid Name="grid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="348" />
            <ColumnDefinition Width="108" />
            <ColumnDefinition Width="214*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="96*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC5E8F8" Offset="1" />
                <GradientStop Color="White" Offset="0" />
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Padding="10,10,0,10">
            <Hyperlink Name="SaveButton" Click="SaveButton_Click">Save</Hyperlink>
        </TextBlock>
       
        <Label Content="TestSwarm username:" Grid.Row="1"  />
        <Label Content="TestSwarm password:" Grid.Row="2" />
        <Label Content="TestSwarm tags:" Grid.Row="3" />
        <Label Content="TestSwarm Url:" Grid.Row="4" />
        <Label Content="Feature Files:" Grid.Row="5" />
        <Label Content="Browser Sets:" Grid.Row="6" />
        <Label Content="Runner mode:" Grid.Row="7" />
        <Label Content="Test submission script:" Grid.Row="8" />

        <TextBox Name="testSwarmUsername" Grid.Row="1" Grid.Column="1" 
                             Text="{Binding solutionUserSettings.TestSwarmUsername, Mode=TwoWay}" />
        <TextBox Name="testSwarmPassword" Grid.Row="2" Grid.Column="1" 
                             Text="{Binding solutionUserSettings.TestSwarmPassword}" />
        <TextBox Name="testSwarmTags" Grid.Row="3" Grid.Column="1" 
                             Text="{Binding Path=solutionUserSettings.TestSwarmTags, Mode=TwoWay}" />
        <TextBox Name="testSwarmUrl" Grid.Row="4" Grid.Column="1" 
                             Text="{Binding solutionSettings.TestSwarmUrl, Mode=TwoWay}" />
        <TextBox Name="featurePath" Grid.Row="5" Grid.Column="1" 
                             Text="{Binding Path=solutionSettings.FeaturePath, Mode=TwoWay}" />
        <TextBox Name="browserSets" Grid.Row="6" Grid.Column="1" 
                             Text="{Binding Path=solutionSettings.TestBrowserSets, Mode=TwoWay}" />
        <TextBox Name="runnerMode" Grid.Row="7" Grid.Column="1" 
                             Text="{Binding Path=solutionSettings.TestRunnerMode, Mode=TwoWay}" />
        <TextBox Name="testSubmissionScript" Grid.Row="8" Grid.Column="1" 
                             Text="{Binding Path=solutionSettings.TestSubmissionScript, Mode=TwoWay}" />

        <TextBlock Grid.Column="1" Padding="10,10,0,10">
            <Hyperlink Name="OpenTestSwarm" Click="Hyperlink_Click">Open Testswarm</Hyperlink>
        </TextBlock>
    </Grid>
</UserControl>
